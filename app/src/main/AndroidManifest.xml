<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Dimje.mymap">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/coffee"
        android:label="MyCafe"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mymap"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AddReview"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog"/>
        <activity android:name=".ReviewActivity" />
        <activity
            android:name=".CafeBrandCheckBox"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".RecyclerView.CafeListActivity" />
        <activity android:name=".ViewPager.IntroViewPager"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Splash.SplashActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6432566897951602~4144194721" />
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="kki260g53o" />

        <activity android:name=".MainActivity" />
    </application>

</manifest>